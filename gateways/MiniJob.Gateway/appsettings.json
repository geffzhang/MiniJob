{
  "AllowedHosts": "*",
  "Dapr": {
    "RunSidecar": true,
    "AppId": "minijob-gateway",
    "DaprHttpPort": 35000,
    "DaprGrpcPort": 50000,
    "ComponentsPath": "dapr/components",
    "Config": "dapr/config.yaml"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Information"
      }
    },
    "Properties": {
      "Application": "MiniJobGateway"
    }
  }
}
