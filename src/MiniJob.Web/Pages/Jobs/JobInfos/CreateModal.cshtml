@page
@using MiniJob.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model MiniJob.Web.Pages.Jobs.JobInfos.CreateModalModel
@inject IStringLocalizer<MiniJobResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="JobInfo" asp-page="/Jobs/JobInfos/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewJobInfo"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>